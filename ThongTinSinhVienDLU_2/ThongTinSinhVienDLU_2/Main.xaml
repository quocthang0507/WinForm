								<Label x:Name="label1" Content="Học kỳ:"/>
								<ComboBox x:Name="cbx_HocKy_TKB" Height="20" Width="50" Opacity="0.5" TabIndex="5" ToolTip="Chọn học kỳ" SelectionChanged="cbx_HocKy_TKB_SelectionChanged">
