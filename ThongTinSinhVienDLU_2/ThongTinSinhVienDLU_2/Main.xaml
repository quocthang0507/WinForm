        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="ThongTinSinhVienDLU_2.MainWindow"
        mc:Ignorable="d" Height="589" Width="1042" Icon="Resources/logo.ico" Title="Cổng thông tin Sinh Viên DLU" WindowStyle="None" Style="{DynamicResource MetroWindowStyle}" ContentRendered="Window_ContentRendered" BorderThickness="0" >
